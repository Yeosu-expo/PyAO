{
    "fp16": {
        "enabled": true,
        "auto_cast": false,
        "loss_scale": 65536
    },
    "zero_optimization": {
        "stage": 2,
        "overlap_comm": true,
        "offload_optimizer": {
            "device": "cpu",
            "ratio": 1,
            "pin_memory": true
        },
        "load_from_fp32_weights": true
    },
    "optimizer": {
        "type": "Adam",
        "params": {
            "lr": 0.001,
            "betas": [
                0.8,
                0.999
            ],
            "eps": 1e-8,
            "weight_decay": 3e-7
        }
    },
    "train_batch_size": 5,
    "micro_batch_size_per_gpu": 1,
    "gradient_accumulation_steps": 1,
    "steps_per_print": 1,
    "wall_clock_breakdown": true,
    "memory_breakdown": true,
    "dump_state": true
}